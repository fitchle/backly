{
  "include": ["src/**/*"],
  "compilerOptions": {
      "noImplicitAny": true,
      "target": "ESNext",
      "module": "ESNext",
      "esModuleInterop": true,
      "strict": true,
      "sourceMap": true,
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "rootDir": "./src",
  },
  
  "exclude": ["test/**/*.js"]
}